# locations
alias dot='cd ~/dotfiles/'
alias bw='cd ~/workspace/projects/baldwin/baldwin-web'
alias trc='cd ~/workspace/projects/trc/TRCUtils'

#alias t="tmux"
alias tmate="tmate -f ~/.tmate.conf"

alias n="v"

# directory stuff
alias ..="cd .."

#l aliases
alias ll='ls -alFh --color=auto'
alias la='ls -A --color=auto'
alias l='ls -CF --color=auto'
alias ls='ls --color=auto'

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

alias fixstructure='nvim +FixRailsDBStructure db/structure.sql; git add db/structure.sql'
